{
  "name": "Pecas!",
  "short_name": "Pecas!",
  "version": "1.2",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions" : [
    "storage",
    "clipboardWrite"
  ],
  "icons": {
    "16": "img/icon/icon48x48.png",
    "128": "img/icon/icon48x48.png"
  }
}